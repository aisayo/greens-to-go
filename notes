classes => 

    user: 
    
        actions: 
            creates account
            has a profile
            puts in orders


        associations:     
            has many orders 
            has many menu_items through orders 

        attributes: 
            first name
            last name
            address line 1 
            address line 2
            city
            state
            zip
            telephone
            


    orders: 

        actions: 
            can be submitted per user
            will be pending or completed 
        
        assocations: 
            belongs to user 
            has many menu_items 
        
        attributes:
            completed? - boolean
            order_date
            food_item 
            quantity 
            total 
            user_id 

